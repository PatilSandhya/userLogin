<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no">
    <title> Admin Panel | USERLOGIN </title>
    <link rel="icon" type="image/x-icon" href="/assets/img/logo-square.png" />
    <!-- BEGIN GLOBAL MANDATORY STYLES -->
    <link href="https://fonts.googleapis.com/css?family=Nunito:400,600,700" rel="stylesheet">
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="/assets/css/plugins.css" rel="stylesheet" type="text/css" />
    <link href="/assets/css/authentication/form-2.css" rel="stylesheet" type="text/css" />
    <!-- END GLOBAL MANDATORY STYLES -->
    <link rel="stylesheet" type="text/css" href="/assets/css/forms/theme-checkbox-radio.css">
    <link rel="stylesheet" type="text/css" href="/assets/css/forms/switches.css">
</head>

<body class="form">


    <div class="form-container outer">
        <div class="form-form">
            <div class="form-form-wrap">
                <div class="form-container">
                    <div class="form-content">

                        <img class="login-logo" src="/assets/img/logo-color.png">
                        <p class="login-logo-text"> EVIFY </p>

                        <form class="text-left" onSubmit="Login(event)">
                            <div class="form">

                                <div class="alert alert-danger" role="alert" id="login-error-msg">
                                    A simple danger alertâ€”check it out!
                                </div>

                                <div id="username-field" class="field-wrapper input">
                                    <label for="username">EMAIL</label>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                                        fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                        stroke-linejoin="round" class="feather feather-user">
                                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                        <circle cx="12" cy="7" r="4"></circle>
                                    </svg>
                                    <input id="username" name="username" type="text" class="form-control"
                                        placeholder="Email">
                                </div>

                                <div id="password-field" class="field-wrapper input mb-2">
                                    <div class="d-flex justify-content-between">
                                        <label for="password">PASSWORD</label>
                                        <!-- <a href="auth_pass_recovery_boxed.html" class="forgot-pass-link">Forgot
                                            Password?</a> -->
                                    </div>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                                        fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                        stroke-linejoin="round" class="feather feather-lock">
                                        <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                                        <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                                    </svg>
                                    <input id="password" name="password" type="password" class="form-control"
                                        placeholder="Password">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                                        fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                        stroke-linejoin="round" id="toggle-password" class="feather feather-eye">
                                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                        <circle cx="12" cy="12" r="3"></circle>
                                    </svg>
                                </div>
                                <div class="d-sm-flex justify-content-between">
                                    <div class="field-wrapper">
                                        <button type="submit" class="btn btn-primary view-btn" value="">Log
                                            In</button>
                                    </div>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- BEGIN GLOBAL MANDATORY SCRIPTS -->
    <script src="/assets/js/libs/jquery-3.1.1.min.js"></script>
    <script src="/bootstrap/js/popper.min.js"></script>
    <script src="/bootstrap/js/bootstrap.min.js"></script>

    <!-- END GLOBAL MANDATORY SCRIPTS -->
    <script src="/assets/js/authentication/form-2.js"></script>

    <script>
        const errorMsg = $('#login-error-msg');
        errorMsg.hide();

        window.onload = () => {
            if(localStorage.getItem('token')) {
                window.location.href = "/dashboard";
            }
        }

        const Login = (e) => {
            e.preventDefault();
            // console.log(e)

            const email = e.target.elements.username.value;
            const password = e.target.elements.password.value;

            $.ajax({
                url: '/login',
                type: "POST",
                data: {
                    email,
                    password
                },
                dataType: "json",
                success: function (data) {
                    console.log('data > ', data);
                    localStorage.setItem('token', data.data.token);
                    localStorage.setItem('email', data.data.email);
                    localStorage.setItem('role', data.data.role);

                    // window.location.href = '/adminside/dashboard';
                    redirectPage(1);
                    //const assignRoles = data.data.assignRoles;
                    /* if(data.data.role != "A" && assignRoles && assignRoles.length > 0) {
                        const first = assignRoles[0];
                        redirectPage(first);
                    } else redirectPage(1); */
                },
                error: function (error) {
                    console.log('Error', error, error.responseJSON);
                    if (error.responseJSON && error.responseJSON.message || error.responseJSON.msg) {
                        errorMsg.text(error.responseJSON.message || error.responseJSON.msg);
                        errorMsg.show();
                    }
                }
            });
        }

        const redirectPage = (number) => {
            if(number == 1) {
                window.location.href = '/dashboard';
            } else if(number == 2 || number == 3) {
                window.location.href = '/adminside/customer';
            } else if(number == 4) {
                window.location.href = '/adminside/customer/add';
            } else if(number == 5 || number == 6) {
                window.location.href = '/adminside/vehicle';
            } else if(number == 7) {
                window.location.href = '/adminside/vehicle/add';
            } else if(number == 8 || number == 9) {
                window.location.href = '/adminside/driver';
            } else if(number == 10) {
                window.location.href = '/adminside/driver/add';
            } else if(number == 11) {
                window.location.href = '/adminside/driver/toBeVerify';
            } else if(number == 12) {
                window.location.href = '/adminside/driver/dailyWorks';
            } else if(number == 13) {
                window.location.href = '/adminside/driver/loginRequest';
            } else if(number == 14 || number == 15) {
                window.location.href = '/adminside/admin';
            } else if(number == 16) {
                window.location.href = '/adminside/admin/add';
            } else if(number == 17 || number == 18) {
                window.location.href = '/adminside/accounts/transaction';
            } else if(number == 19) {
                window.location.href = '/adminside/accounts/transaction/add';
            } else if(number == 20) {
                window.location.href = '/adminside/accounts/bankAccount';
            } else if(number == 21) {
                window.location.href = '/adminside/accounts/transactionCategory';
            } else if(number == 22 || number == 23) {
                window.location.href = '/adminside/customFields/undeliveredReason';
            }
        }
    </script>

</body>

</html>